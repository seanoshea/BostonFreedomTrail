  target :BostonFreedomTrailTests do
    pod 'Quick', '1.0.0'
    pod 'Nimble', '5.1.1'
    pod 'OHHTTPStubs', '5.2.3'
    pod 'FBSnapshotTestCase', '2.1.4'
  end

end
